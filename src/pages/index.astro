---
import { Picture } from "astro:assets";
import MainLayout from '../layouts/MainLayout.astro';
import Welcome from "../components/react/WelcomePopup.jsx"
import Playbutton  from "/public/game-controller-svgrepo-com.svg";

const user = Astro.locals.user;
if (!user) {
	return Astro.redirect("/login");
}

const categoriasUrl = `/categorias?userId=${user.id}`;

---

<MainLayout title="PanaAprende">
  <Welcome username={user.username} client:only="react" />
  <div class="w-100 h-100 flex justify-center">
      <link rel="stylesheet" href="https://use.typekit.net/sce4jji.css">
      <link rel="preconnect" href="https://fonts.googleapis.com">
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
      <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">

      <div class=" flex mb-4 justify-center bg-customColor " >

          <div class="flex flex-col ">
              
              <div class=" top-1/2 -translate-y-1 -mt-7">
                  <h1 id="title"  >
                      PanaAprende
                  </h1>
              </div>
              
             <div class="flex justify-center items-center mb-10 flex-1">
                 
                 <a class="hover:lift" href="/categorias">
                      <Picture  src={Playbutton}
                       width={200} alt="boton jugar"/>
                 </a>
                 
             </div> 

          </div>
          
      </div>

  </div>
</MainLayout>


<style>

    .bg-customColor {
        width: 800px;
        height: 600px; 
        border-radius: 0.5rem;

        background: radial-gradient(circle, #5a5958 10%, transparent 11%);
        background-size: 1em 1em;
        background-color: #342c28;
        opacity: 1;
    }

    #title {
        font-family: modern-love, sans-serif;
        font-weight: 2;
        font-style: normal;
        color: #b19c85; 
        font-size: calc(1rem + 5vw);
    }

    @keyframes bounce {
      0%, 100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-40%);
      }
    }

    .animate-bounce {
      animation: bounce 0.5s ease-in-out;
    }

    .hover\:lift:hover {
      transform: translateY(-20px);
      transition: transform 0.3s ease-in-out;
    }


</style>

