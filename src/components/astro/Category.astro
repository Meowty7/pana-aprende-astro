---
const { title, description, link } = Astro.props;
---

<a
    href={link}
    class='transform hover:scale-[1.01] w-[316px] transition-all border dark:border-gray-800 rounded p-4 bg-white dark:bg-gray-900'
    
    rel='noopener noreferrer'>

    <h3
        class='text-lg font-bold text-left mt-2 text-gray-900 dark:text-gray-100'
    >
        {title}
    </h3>
    <p class='mt-1 text-gray-700 dark:text-gray-400'>
        {description}
    </p>
</a>
